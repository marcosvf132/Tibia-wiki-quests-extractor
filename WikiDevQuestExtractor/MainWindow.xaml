<Window x:Class="WikiDevQuestExtractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WikiDevQuestExtractor"
        mc:Ignorable="d"
        Title="Tibia wiki api - Quests extractor" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="50,5,0,5" HorizontalAlignment="Left">
                <TextBlock Text="External link to data:" Margin="0,0,15,0"/>
                <TextBox x:Name="StartBox" Text="https://tibiawiki.dev/api/quests/" Width="450" Foreground="#FF0024AE"/>
                <Button x:Name="StartButton" Content="Start" Padding="10,0,10,0" Margin="5,0,5,0" Click="StartButton_Click"/>
            </StackPanel>
            <ScrollViewer ScrollViewer.CanContentScroll="True">
                <StackPanel x:Name="LogPanel" Width="700" Height="350" Background="#FFE2E2E2" MaxHeight="350"/>
            </ScrollViewer>
            <TextBlock Text="Author: Marcosvf132 - Developed for study purpose only!" HorizontalAlignment="Right" Margin="0,5,15,0" Foreground="#FF9E9E9E"/>
        </StackPanel>
    </Grid>
</Window>
